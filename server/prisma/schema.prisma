generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Category {
  WORK
  PERSONAL
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  tasks     Task[]
  createdAt DateTime @default(now())
}

model Task {
  id           String    @id @default(cuid())
  title        String
  done         Boolean   @default(false)
  userId       String
  user         User      @relation(fields: [userId], references: [id])

  createdAt    DateTime  @default(now())
  completedAt  DateTime?
  dueDate      DateTime?          // stays the same
  sortIndex    Int       @default(0) @map("order") // <-- rename field, keep DB column "order"
  category     Category  @default(PERSONAL)
}
